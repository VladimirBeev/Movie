@model ICollection<AllMoviesViewModel>
@{
	ViewData["Title"] = "Home Page";
	var houses = Model.ToList();
}
<div class="mb-5"></div>
<div id="carouselExampleControls" style="background-color:blue" class="carousel slide" data-bs-ride="carousel">
	<div class="carousel-inner">
		@for (int i = 0; i < houses.Count(); i++)
		{
			var movie = houses[i];
			<div class="carousel-item @(i == 0 ? "active" : string.Empty)">
				<img class="d-block w-100" style="height:800px"
					 src="@movie.ImageUrl" alt="@movie.Title">
				<div class="carousel-caption d-none d-md-block">
					<h5>
						<a class="btn btn-primary" asp-controller="Movie" asp-action="Details"
						   asp-route-id="@movie.Id"> @movie.Title</a>
					</h5>
				</div>
			</div>
		}
	</div>
	<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Previous</span>
	</button>
	<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Next</span>
	</button>
</div>

	<style>
		img {
			display: block;
			margin-left: auto;
			margin-right: auto;
			width: 40%;
		}
	</style>