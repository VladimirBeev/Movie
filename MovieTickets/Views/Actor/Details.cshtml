@model AllActorsViewModel;

@{
	ViewData["Title"] = "Details";
}

<div class="row text">
	<div class="col-md-8 offset-2">
		<p>
			<h1 class="text-center">Add a New Actor</h1>
		</p>
		<div class="row">
			<div class="col-md-8 offset-2">
					<div class="form-group text-center">
						<img id="preview" />
					</div>
					<div class="form-group">
						<label asp-for="ImageUrl" class="control-label"></label>
						<input asp-for="ImageUrl" class="form-control" readonly/>
					</div>
					<div class="form-group">
						<label asp-for="Name" class="control-label"></label>
						<input asp-for="Name" class="form-control" readonly/>
					</div>
					<div class="form-group">
						<label asp-for="Description" class="control-label"></label>
						<input asp-for="Description" class="form-control" readonly/>
					</div>
					<div class="form-group">
						<a class="btn btn-outline-success float-end" asp-controller="Actor" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
						<a class="btn btn-outline-secondary" asp-action="AllActors">Show All</a>
					</div>
			</div>
		</div>
	</div>
</div>

@section Scripts{
	<script>
		$(document).ready(function () {
			var output = document.getElementById('preview');
			output.src = $("#ImageUrl").val();
		})
		$("#ImageUrl").on("change", function () {
			var output = document.getElementById('preview');
			output.src = $(this).val();
		})
	</script>
}