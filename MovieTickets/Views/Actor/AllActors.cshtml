@model IEnumerable<ActorViewModel>;

@{
	ViewData["Title"] = "Actors";
}

<div class="row">
	<div class="col-md-8 offset-md-2">
		<p>
			<h1 class="text-center">@ViewData["Title"]</h1>
		</p>
		<table class="table">
			<thead>
				<tr>
					<th>@Html.DisplayNameFor(model => model.ImageUrl)</th>
					<th>@Html.DisplayNameFor(model => model.Name)</th>
					<th>@Html.DisplayNameFor(model => model.Description)</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td class="align-middle">
							<img class="rounded-circle" src="@item.ImageUrl" alt="@item.Name" style="max-width: 150px"?/>
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Name)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Description)
						</td>
						<td class="align-middle">
							<a class="btn btn-outline-primary" asp-controller="Actor" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a>
							<a class="btn btn-outline-info"asp-controller="Actor" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a>
							<a class="btn btn-danger" asp-controller="Actor" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
<div style="position: fixed; right: 25px; bottom: 75px;" class="text-white">
	<a asp-controller="Actor" asp-action="Create" class="btn btn-success">
		<i class="bi bi-plus-circle"></i>Add New</a>
</div>