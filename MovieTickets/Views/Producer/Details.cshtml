@model ProducersViewModel;

@{
	ViewData["Title"] = "Details for Producer";
}

<div class="row text">
	<div class="col-md-8 offset-2">
		<p>
			<h1 class="text-center">@ViewData["Title"] @Model.Name</h1>
		</p>
		<div class="row">
			<div class="col-md-8 offset-2">
				<div class="form-group text-center">
					<img id="preview" />
				</div>
				<div class="form-group visually-hidden">
					<label asp-for="ImageUrl" class="control-label"></label>
					<input asp-for="ImageUrl" class="form-control" readonly />
				</div>
				<div class="form-group">
					<label asp-for="Name" class="control-label"></label>
					<input asp-for="Name" class="form-control" readonly />
				</div>
				<div class="form-group">
					<label asp-for="Description" class="control-label"></label>
					<input asp-for="Description" class="form-control" readonly />
				</div>
				<div class="form-group">
					@if ((User.Identity?.IsAuthenticated ?? false) && User.IsInRole("Admin"))
					{
						<a class="btn btn-outline-success float-end" asp-controller="Producer" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
					}
					<a class="btn btn-outline-secondary" asp-action="AllProducers">Show All</a>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts{
	<script src="~/js/Image.js"></script>
}